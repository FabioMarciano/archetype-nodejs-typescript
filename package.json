{
	"name": "archetype-nodejs-typescript",
	"version": "1.0.0",
	"description": "Archetype for node/typescript applications",
	"main": "index.js",
	"scripts": {
		"test": "jest --verbose --bail --forceExit --detectOpenHandles --runInBand --logHeapUsage",
		"test:watch": "jest --watchAll",
		"coverage": "jest --coverage",
		"lint": "eslint . --ext .ts",
		"build": "rm -rf dist && tsc",
		"start": "npm run build && node -r dotenv/config dist/index.js",
		"dev": "ts-node-dev -r dotenv/config ./src/index.ts"
	},
	"keywords": [
		"archetype",
		"nodejs",
		"typescript"
	],
	"author": "Fabio Marciano",
	"license": "MIT",
	"devDependencies": {
		"@types/express": "^4.17.11",
		"@types/jest": "^26.0.22",
		"@types/node": "^14.14.37",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^4.20.0",
		"@typescript-eslint/parser": "^4.20.0",
		"eslint": "^7.23.0",
		"jest": "^26.6.3",
		"supertest": "^6.1.6",
		"ts-jest": "^26.5.4",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.7.2"
	},
	"dependencies": {
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"winston": "^3.3.3"
	}
}
